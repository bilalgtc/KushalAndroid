<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetCare" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/text_blue</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="btn" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/encode_sans_bold</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="dashboard_btn" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/encode_sans_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:background">@drawable/ripple_dashbord_btns</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="dashboard_btn1" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/encode_sans_semibold</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ripple_register_with_email</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="registration_card" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/encode_sans_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:background">@drawable/registration_card_border</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="password" parent="Widget.AppCompat.TextView">

        <item name="android:background">@drawable/password_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ImageView.style" parent="">
        <item name="cornerSize">8%</item>
    </style>
    
    <style name="text_15_encoded_sans_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">#070821</item>
        <item name="fontFamily">@font/encode_sans_bold</item>
    </style>
    <style name="text_11_encoded_sans" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">#070821</item>
        <item name="fontFamily">@font/encode_sans</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_btn</item>
    </style>

</resources>