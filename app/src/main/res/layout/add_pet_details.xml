<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPetDetails"
    android:background="#F5F5F5">
    
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_14sdp"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:src="@drawable/back_icon_blue"

            />

        <TextView
            android:layout_width="@dimen/_249sdp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/encode_sans_bold"
            android:text="@string/add_pet_details"
            android:textColor="#070821"
            android:textSize="@dimen/_17sdp" />



    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="#F0F0F8"/>

    <ScrollView
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginHorizontal="@dimen/_16sdp">

            <RelativeLayout
                android:id="@+id/img_section"
                android:layout_width="@dimen/_113sdp"
                android:layout_height="@dimen/_113sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_9sdp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="@dimen/_113sdp"
                    android:layout_height="@dimen/_113sdp"
                    android:padding="@dimen/_13sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/troy_dog"
                    app:shapeAppearanceOverlay="@style/ImageView.Circle"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/add_icon"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    tools:ignore="MissingConstraints" />



            </RelativeLayout>




            <TextView
                android:id="@+id/general_info"
                android:layout_below="@+id/img_section"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/encode_sans_bold"
                android:textFontWeight="700"
                android:textColor="#070821"
                android:text="@string/general_info"
                />

            <TextView
                android:layout_below="@+id/general_info"
                android:id="@+id/petname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pet_name"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_14sdp"
                />
            <EditText
                android:id="@+id/pet_name"
                android:layout_below="@id/petname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/_13ssp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/pet_name_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pet_name"
                android:layout_marginTop="-10dp"
                app:dividerColor="#F0F0F8" />

            <TextView
                android:id="@+id/species"
                android:layout_below="@+id/pet_name"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/species_of_your_pet"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_11ssp"

                />
            <EditText
                android:id="@+id/species_of_pet"
                android:layout_below="@id/species"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/species_of_pet_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/species_of_pet"
                android:layout_marginTop="-10dp"
                app:dividerColor="#F0F0F8" />

            <TextView
                android:id="@+id/breed"
                android:layout_below="@+id/species_of_pet"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Breed"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_11ssp"

                />
            <EditText
                android:id="@+id/breed_of_pet"
                android:layout_below="@id/breed"
                android:layout_marginTop="-1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/breed_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/breed_of_pet"
                android:layout_marginTop="-10dp"
                app:dividerColor="#F0F0F8" />

            <TextView
                android:id="@+id/size"
                android:layout_below="@+id/breed_of_pet"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Size_optional"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_11ssp"

                />
            <EditText
                android:id="@+id/pet_size"
                android:layout_below="@id/size"
                android:layout_marginTop="-1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/pet_size_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pet_size"
                android:layout_marginTop="-10dp"
                app:dividerColor="#F0F0F8" />

            <TextView
                android:id="@+id/gender"
                android:layout_below="@+id/pet_size"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Gender"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_11ssp"

                />
            
           <LinearLayout
               android:id="@+id/gender_btns"
               android:layout_below="@+id/gender"
               android:layout_marginTop="@dimen/_11sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/male_btn"
                   android:clickable="true"
                   android:background="@drawable/male_female_bg_unchecked"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_26sdp"
                   android:gravity="center"
                   android:layout_marginEnd="@dimen/_8sdp"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/male_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/male_icon"
                       android:paddingEnd="@dimen/_5sdp"
                       />
                   <TextView
                       android:id="@+id/txt_male"
                       android:layout_gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/male"
                       android:textSize="@dimen/_12ssp"
                       android:textColor="@color/black"
                       android:fontFamily="@font/encode_sans_bold"
                       android:paddingEnd="@dimen/_11sdp"/>
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/female_btn"
                   android:clickable="true"
                   android:background="@drawable/male_female_bg_unchecked"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_26sdp"
                   android:layout_marginStart="@dimen/_8sdp"
                   android:gravity="center"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/female_icon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/female_icon"
                       android:paddingEnd="@dimen/_5sdp"
                       />
                   <TextView
                       android:id="@+id/txt_female"
                       android:paddingEnd="@dimen/_10sdp"
                       android:layout_gravity="center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/_12ssp"
                       android:fontFamily="@font/encode_sans_bold"
                       android:textColor="@color/black"
                       android:text="@string/female"/>
               </LinearLayout>

           </LinearLayout>

            <TextView
                android:id="@+id/addi_info"
                android:layout_below="@id/gender_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/encode_sans_bold"
                android:textFontWeight="700"
                android:textColor="#070821"
                android:layout_marginTop="@dimen/_34sdp"
                android:text="@string/Additional_Information"
                />

            <LinearLayout
                android:id="@+id/addi_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/addi_info"
                android:layout_marginTop="@dimen/_27sdp"
                >
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/neutered"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/encode_sans"
                    android:textFontWeight="400"
                    />
                
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/toggle_thumb_selector"
                    android:elevation="@dimen/_5sdp"
                    app:track="@drawable/toggle_track_selector"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/addi_info2"
                android:layout_below="@+id/addi_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                >
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Vaccinated"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/encode_sans"
                    android:textFontWeight="400"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/toggle_thumb_selector"
                    app:track="@drawable/toggle_track_selector"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/addi_info3"
                android:layout_below="@+id/addi_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                >
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Friendly_with_dogs"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/encode_sans"
                    android:textFontWeight="400"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/toggle_thumb_selector"
                    app:track="@drawable/toggle_track_selector"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/addi_info4"
                android:layout_below="@+id/addi_info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                >
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/Friendly_with_cats"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/encode_sans"
                    android:textFontWeight="400"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/toggle_thumb_selector"
                    app:track="@drawable/toggle_track_selector"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/addi_info5"
                android:layout_below="@+id/addi_info4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                >
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/friendly_with_kids_lt_10"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/encode_sans"
                    android:textFontWeight="400"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/toggle_thumb_selector"
                    app:track="@drawable/toggle_track_selector"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/addi_info6"
                android:layout_below="@+id/addi_info5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                >
                <TextView
                    android:gravity="center_vertical"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/friendly_with_kids_gt_10"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/encode_sans"
                    android:textFontWeight="400"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/toggle_thumb_selector"
                    app:track="@drawable/toggle_track_selector"
                    />
            </LinearLayout>

            <Button
                android:layout_below="@+id/addi_info6"
                android:id="@+id/submit"
                style="@style/btn"
                android:layout_width="match_parent"
                android:textSize="@dimen/_13sdp"
                android:layout_height="@dimen/_36sdp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                android:stateListAnimator="@null"
                android:text="@string/Submit"

                />




        </RelativeLayout>






    </ScrollView>

</RelativeLayout>