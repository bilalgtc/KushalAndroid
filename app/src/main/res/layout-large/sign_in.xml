<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_187sdp"
        android:background="@drawable/img"
        >
        <ImageView
            android:id="@+id/singIn_back_button"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/arrow_left"
            android:layout_marginTop="@dimen/_27sdp"
            android:layout_marginStart="@dimen/_9sdp"
            />

        <TextView
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:layout_below="@+id/singIn_back_button"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/encode_sans_bold"
            android:layout_marginStart="@dimen/_30sdp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        >
        <LinearLayout
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/text_ocw"
            android:layout_marginTop="@dimen/_92sdp"
            >
            <View
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="2dp"
                android:background="#F0F0F8"
                />

            <TextView

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_continue_with"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                android:textFontWeight="400"
                android:fontFamily="@font/encode_sans"
                android:gravity="center_horizontal"
                />

            <View
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="2dp"
                android:background="#F0F0F8"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fb_g_btns"
            android:layout_below="@+id/text_ocw"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_weight="1"
                android:id="@+id/registration_using_fb"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/fb_round"
                android:paddingStart="@dimen/_90sdp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/registration_using_google"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/google_round"
                android:paddingEnd="@dimen/_87sdp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fb_g_btns"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_56sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_you_have"
                android:textColor="@color/black"
                android:fontFamily="@font/encode_sans"
                android:textSize="@dimen/_9ssp" />


            <TextView
                android:id="@+id/signIn_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/encode_sans_bold"
                android:text="@string/registration"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/_9ssp"


                />

        </LinearLayout>



    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_96sdp"
        style="@style/registration_card"
        android:elevation="@dimen/_5sdp"
        android:outlineAmbientShadowColor="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:id="@+id/e_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_10sdp"
                />
            <EditText
                android:id="@+id/email_id"
                android:layout_below="@id/e_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/white"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/black"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/email_id_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_id"
                android:layout_marginTop="-10dp"
                app:dividerColor="#F0F0F8" />

            <LinearLayout
                android:id="@+id/pass"
                android:layout_below="@id/email_id"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textColor="@color/text_gray"
                    android:fontFamily="@font/encode_sans_semibold"
                    android:textSize="@dimen/_8ssp"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_weight="8"
                        android:id="@+id/signIn_password"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:importantForAutofill="no"
                        tools:ignore="InefficientWeight" />


                    <ImageView
                        android:id="@+id/signIn_pass_eye"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/password_visible_off_eye"
                        tools:layout_editor_absoluteX="280dp"
                        tools:layout_editor_absoluteY="21dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/pass_divider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    app:dividerColor="#F0F0F8" />
            </LinearLayout>


            <TextView
                android:id="@+id/singIn_forgot_pass"
                android:layout_below="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/do_not_remember"
                android:layout_alignParentEnd="true"
                android:textColor="@color/text_blue"
                android:fontFamily="@font/encode_sans"
                android:textSize="@dimen/_8ssp" />


            <Button
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:stateListAnimator="@null"
                android:layout_below="@+id/singIn_forgot_pass"
                android:id="@+id/sign_in"
                style="@style/btn"
                android:textSize="@dimen/_10ssp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_18sdp"
                android:text="@string/sign_in"

                />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>