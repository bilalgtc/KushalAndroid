<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_198sdp"
        android:background="@drawable/header_bg"
        >
        <ImageView
            android:id="@+id/registration_back_button"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:src="@drawable/arrow_left"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_13sdp"
            />

        <TextView
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registration"
            android:layout_below="@+id/registration_back_button"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/encode_sans_bold"
            android:layout_marginStart="@dimen/_33sdp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        >
        <LinearLayout
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/text_ocw"
            android:layout_marginTop="@dimen/_163sdp"
            >
            <View
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="2dp"
                android:background="#F0F0F8"
                />

            <TextView

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or_continue_with"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/encode_sans"
                android:gravity="center_horizontal"
                />

            <View
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="2dp"
                android:background="#F0F0F8"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/fb_g_btns"
            android:layout_below="@+id/text_ocw"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_weight="1"
                android:id="@+id/registration_using_fb"
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_33sdp"
                android:src="@drawable/fb_round"
                android:paddingStart="@dimen/_88sdp"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/registration_using_google"
                android:layout_width="@dimen/_33sdp"
                android:layout_height="@dimen/_33sdp"
                android:src="@drawable/google_round"
                android:paddingEnd="@dimen/_85sdp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fb_g_btns"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/login_descreption"
                android:textColor="@color/black"
                android:fontFamily="@font/encode_sans"
                android:textSize="@dimen/_9ssp" />


            <TextView
                android:id="@+id/registration_signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:fontFamily="@font/encode_sans_semibold"
                android:text="@string/sign_in"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/_9ssp"


                />

        </LinearLayout>



    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_height="@dimen/_262sdp"
        android:layout_marginTop="@dimen/_85sdp"
        style="@style/registration_card"
        android:outlineAmbientShadowColor="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_15sdp">

            <TextView
                android:id="@+id/f_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_16sdp"
                />
            <EditText
                android:id="@+id/fullName"
                android:layout_below="@id/f_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/_10ssp"
                android:backgroundTint="#F0F0F8"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/maill"
                android:layout_below="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/text_gray"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_8ssp"

                />
            <EditText
                android:id="@+id/email_id"
                android:layout_below="@id/maill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_10ssp"
                android:backgroundTint="#F0F0F8"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/m_no"
                android:layout_below="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:textColor="@color/text_gray"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/encode_sans_semibold"
                android:textSize="@dimen/_8ssp"
                />
            <EditText
                android:id="@+id/mobile_no"
                android:layout_below="@id/m_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:backgroundTint="#F0F0F8"
                android:inputType="number"
                android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/pass"
                android:layout_below="@id/mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/password"
                    android:textColor="@color/text_gray"
                    android:fontFamily="@font/encode_sans_semibold"
                    android:textSize="@dimen/_8ssp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/registration_password"
                        android:layout_width="@dimen/_221sdp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        tools:ignore="MissingConstraints"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:backgroundTint="#F0F0F8"
                        />

                    <ImageView
                        android:id="@+id/registration_pass_eye"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/eye_visibility"
                        tools:layout_editor_absoluteX="280dp"
                        tools:layout_editor_absoluteY="21dp"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/check1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass"
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/checkbox_unchecked"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/i_agree_with"
                    android:fontFamily="@font/encode_sans"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_8sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/the_rules"
                    android:textColor="#4552CB"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:fontFamily="@font/encode_sans"
                    android:textStyle=""
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/check2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/check1"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/checkbox_unchecked"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/i_do_not_want"
                    android:fontFamily="@font/encode_sans"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_8sdp"/>



            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/check1"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@id/pass"-->
<!--                android:text="@string/i_agree_with"-->
<!--                android:fontFamily="@font/encode_sans"-->
<!--                android:textSize="@dimen/_11sdp"-->
<!--                android:textColor="@color/black"-->
<!--                android:layout_marginHorizontal="@dimen/_20sdp"-->
<!--                android:layout_marginTop="@dimen/_7sdp"-->
<!--                app:drawableStartCompat="@drawable/checkbox_unchecked"-->
<!--                android:drawablePadding="@dimen/_8sdp"/>-->

<!--            <TextView-->
<!--                android:id="@+id/check2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@id/check1"-->
<!--                android:layout_marginTop="@dimen/_8sdp"-->
<!--                android:text="@string/i_do_not_want"-->
<!--                android:fontFamily="@font/encode_sans"-->
<!--                android:textSize="@dimen/_11sdp"-->
<!--                android:textColor="@color/black"-->
<!--                android:drawablePadding="@dimen/_8sdp"-->
<!--                android:layout_marginHorizontal="@dimen/_20sdp"-->
<!--                app:drawableStartCompat="@drawable/checkbox_unchecked" />-->

            <Button
                android:layout_below="@+id/check2"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/sign_up"
                style="@style/btn"
                android:textSize="@dimen/_10ssp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:text="@string/sign_up"

                />



        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>