<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcomeActivity"
    android:background="@drawable/welcomescreen_bg">

    <TextView
        android:id="@+id/welcome_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_29sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:fontFamily="@font/encode_sans_bold"
        android:text="@string/sign_in"
        android:textColor="#4552CB"
        android:textSize="@dimen/_8ssp" />


    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/welcome_sign_in"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/pagerIntroSlider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
      >
    </androidx.viewpager.widget.ViewPager>


    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_below="@id/welcome_sign_in"
        android:layout_marginTop="@dimen/_250sdp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="#E6E7F8"
        app:dotsCornerRadius="@dimen/_8sdp"
        app:dotsSize="@dimen/_4sdp"
        app:dotsSpacing="@dimen/_4sdp"
        app:dotsWidthFactor="2.9"
        app:selectedDotColor="#F1A852"
        />



    <Button
        android:id="@+id/next_btn"
        android:layout_below="@id/dots_indicator"
        android:layout_marginTop="@dimen/_80sdp"
        style="@style/btn"
        android:stateListAnimator="@null"
        android:textSize="@dimen/_9ssp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginHorizontal="@dimen/_75sdp"
        android:text="@string/next"

        />



</RelativeLayout>