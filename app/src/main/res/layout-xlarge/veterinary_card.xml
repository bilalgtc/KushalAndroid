<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VeterinaryCard">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:theme="@style/Theme.PetCare">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_196sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/dog_img"
                app:layout_collapseMode="parallax" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card"
                style="@style/registration_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:elevation="@dimen/_3sdp"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_gravity="bottom"
                app:layout_collapseMode="parallax"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_weight="2">

                        <LinearLayout
                            android:id="@+id/r1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pet_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/encode_sans_bold"
                                android:text="@string/troy"
                                android:textColor="#070821"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/r2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/r1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/card_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_5sdp"

                                    android:src="@drawable/dog_print_icon" />

                                <TextView
                                    android:id="@+id/pet_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:fontFamily="@font/encode_sans"
                                    android:text="@string/dog"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="@dimen/_7ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:background="@drawable/card_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:src="@drawable/dog_icon" />

                                <TextView
                                    android:id="@+id/pet_verity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:fontFamily="@font/encode_sans"
                                    android:text="@string/german_shepherd"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="@dimen/_7ssp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/r3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/r2"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:background="@drawable/card_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:src="@drawable/male_icon_blue" />

                                <TextView
                                    android:id="@+id/pet_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:fontFamily="@font/encode_sans"
                                    android:text="@string/male"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="@dimen/_7ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:background="@drawable/card_bg"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:src="@drawable/sizeofdog_icon" />

                                <TextView
                                    android:id="@+id/pet_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:fontFamily="@font/encode_sans"
                                    android:text="@string/size"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="@dimen/_7ssp" />

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_46sdp"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/rate_card"
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="@drawable/rate_card_bg">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="@string/rate"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15ssp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rate_card"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/encode_sans_semibold"
                            android:text="@string/review"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_7ssp" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                app:layout_collapseMode="pin">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginStart="@dimen/_10sdp"
                        android:id="@+id/back_btn"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/back_icon_white" />

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="bottom|center_vertical"
                        android:layout_marginStart="@dimen/_215sdp"
                        android:src="@drawable/share" />

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/heart_favourite_like" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@color/white">


            <TextView
                android:id="@+id/intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/encode_sans_bold"
                android:text="@string/Introduction"
                android:textColor="#070821"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/intro"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/encode_sans"
                android:text="@string/intro_des"
                android:textColor="#070821"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/personality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description1"
                android:layout_marginTop="@dimen/_14ssp"
                android:fontFamily="@font/encode_sans_bold"
                android:text="@string/Personality"
                android:textColor="#070821"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personality"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/encode_sans"
                android:text="@string/personality_des"
                android:textColor="#070821"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/intelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description2"
                android:layout_marginTop="@dimen/_15ssp"
                android:fontFamily="@font/encode_sans_bold"
                android:text="@string/Intelligence"
                android:textColor="#070821"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/intelligence"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/encode_sans"
                android:text="@string/intelligence_des"
                android:textColor="#070821"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/addi_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description3"
                android:layout_marginTop="@dimen/_25sdp"
                android:fontFamily="@font/encode_sans_bold"
                android:text="@string/Additional_Information"
                android:textColor="#070821"
                android:textFontWeight="700"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:id="@+id/addi_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addi_info"
                android:layout_marginTop="@dimen/_18sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/encode_sans"
                    android:gravity="center_vertical"
                    android:text="@string/neutered"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/statusIcon1"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/success" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/addi_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addi_info1"
                android:layout_marginTop="@dimen/_17sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/encode_sans"
                    android:gravity="center_vertical"
                    android:text="@string/Vaccinated"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/statusIcon2"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/success" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addi_info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addi_info2"
                android:layout_marginTop="@dimen/_17sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/encode_sans"
                    android:gravity="center_vertical"
                    android:text="@string/Friendly_with_dogs"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/statusIcon3"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/success" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addi_info4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addi_info3"
                android:layout_marginTop="@dimen/_19sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/encode_sans"
                    android:gravity="center_vertical"
                    android:text="@string/Friendly_with_cats"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/statusIcon4"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/success" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addi_info5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addi_info4"
                android:layout_marginTop="@dimen/_19sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/encode_sans"
                    android:gravity="center_vertical"
                    android:text="@string/friendly_with_kids_lt_10"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/statusIcon5"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/success" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/addi_info6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addi_info5"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:fontFamily="@font/encode_sans"
                    android:gravity="center_vertical"
                    android:text="@string/friendly_with_kids_gt_10"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/statusIcon6"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/success" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



